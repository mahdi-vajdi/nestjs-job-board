{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "roots": [
    "<rootDir>/test"
  ],
  "moduleNameMapper": {
    "@common/(.*)": "<rootDir>/src/common/$1",
    "@infrastructure/(.*)": "<rootDir>/src/infrastructure/$1",
    "@job/(.*)": "<rootDir>/src/application/job/$1"
  }
}
